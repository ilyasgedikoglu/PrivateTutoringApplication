@model IEnumerable<PrivateTutoringApplication.Shared.DTO.LessonDTO>


@foreach (var item in Model)
{
    <!-- course item -->
    <div class="col-lg-4 col-sm-6 mb-5">
        <div class="card p-0 border-primary rounded-0 hover-shadow">
            <img class="card-img-top rounded-0" src="@item.Resim" alt="course thumb">
            <div class="card-body">
                <ul class="list-inline mb-2">
                    <li class="list-inline-item"><i class="ti-calendar mr-1 text-color"></i>@item.EklenmeZamani</li>
                    <li class="list-inline-item"><a class="text-color" href="#">@item.Category</a></li>
                </ul>
                @Html.ActionLink(@item.Name, "GetLesson", "Lesson", new { guid = item.Guid }, new { @class = "card-title" })
            <p class="card-text mb-4">
                @if (item.Definition.Length >= 100)
                {
                    @item.Definition.Substring(0,100)
                }
                else
                {
                    @item.Definition
                }
            </p>
                @Html.ActionLink("Apply Now", "GetLesson", "Lesson", new { guid = item.Guid }, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
}