@model PrivateTutoringApplication.Shared.DTO.ScheduleDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<section class="page-title-section overlay" data-background="images/backgrounds/page-title.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ul class="list-inline custom-breadcrumb">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="@@page-link">Appointments > </a></li>
                    <li class="list-inline-item text-white h3 font-secondary @@nasted">Enter a keyword</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="section mb-20">
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 ml-auto bg-primary py-5 newsletter-block">
                    @using (Html.BeginForm("Create", "Schedule", FormMethod.Post))
                    {
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.TutorScheduleId, new SelectList(ViewBag.TutorSchedules, "Id", "LessonStartDate"), new { @class = "col-md-8" })
                    </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>