@model System.Collections.Generic.IEnumerable<PrivateTutoringApplication.Shared.DTO.KullaniciDTO>
@{
    ViewData["Title"] = "GetStudents";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Students</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Resim</th>
                                    <th>Ad-Soyad</th>
                                    <th>Email</th>
                                    <th>TelephoneNumber</th>
                                    <th>Job</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img src="\@item.Resim" class="img img-thumbnail" width="150" /></td>
                                        <td>@item.Ad @item.Soyad</td>
                                        <td>@item.Email</td>
                                        <td>@item.TelephoneNumber</td>
                                        <td>@item.Job</td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", "Account", new { guid = item.Guid }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>






